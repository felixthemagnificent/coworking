
<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8 center">
		<h1 style="text-align:center">New Visit</h1>
		<%= simple_form_for(@visit) do |f| %>
		  <%= f.error_notification %>
		  <div class="row">
		  <div class="form-inputs">
		    <%= simple_form_for :other do |o| %>
		    <%= o.text_field :name, class: 'form-control' %>
		    <% end %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, class: 'btn btn-primary btn-lg', style: 'align:center' %>
		  </div>
		  
		<% end %>

	</div>
	<div class="col-md-2"></div>
</div>


<%= link_to 'Back', visits_path %>

<script type="text/javascript">
  $('#other_name').autocomplete({
    source: function (request, response) {
      $.ajax({
        url: '/customers.json',
        data: {
          customer: {
            name: request.term
          }
        },
        success: function (data)
        {
          response(data);
        }
      });
    }
  })
</script>