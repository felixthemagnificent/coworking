<% modal ||= false %>
<% remote = modal ? true : false %>
<%= simple_form_for :orderdetail, remote: remote do |f| %>

  <div class="form-inputs">
    <%= f.input :meal, as: :string, required: false %>
    <%= f.input :quantity, as: :integer, required: false %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
