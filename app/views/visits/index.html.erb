<p id="notice"><%= notice %></p>

<h1>Listing Visits</h1>

<table class="table">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Membership</th>
      <th>Check in</th>
      <th>Check out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= link_to visit.customer.name, visit.customer %></td>
        <td><%= visit.membership.name %></td>
        <td><%= visit.check_in %></td>
        <td><%= visit.check_out %></td>
        <td><%= link_to 'Show', visit %></td>
        <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
        <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

