<h1>Меню</h1>

<table class="table">
  <thead>
    <tr>
      <th>Блюдо</th>
      <th>Количество</th>
      <th>Цена/шт</th>
      <th>Цена</th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.order_details.first.quantity%></td>
        <td><%= meal.price%></td>
        <td><%= meal.price * meal.order_details.first.quantity%></td>
        <!--<td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

